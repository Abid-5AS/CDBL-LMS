{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": false,
    "skipLibCheck": false,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ],
      "@shared/*": [
        "./components/shared/*"
      ],
      "@dash/*": [
        "./components/dashboards/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "app",
    "components",
    "constants",
    "context",
    "hooks",
    "lib",
    "prisma",
    "scripts",
    "tests",
    "types",
    ".next-dev/types/**/*.ts",
    ".next-dev/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
