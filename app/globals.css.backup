@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap');

/* Premium Google Font - Inter */
@import "tailwindcss";
@import "tw-animate-css";
@import "../styles/theme.css";

/* Elevation Tokens for Material You × Liquid Glass */
:root {
  --elevation-1: 0 2px 4px rgba(0, 0, 0, 0.08);
  --elevation-2: 0 4px 8px rgba(0, 0, 0, 0.12);
  --elevation-3: 0 8px 16px rgba(0, 0, 0, 0.16);
  --elevation-4: 0 12px 24px rgba(0, 0, 0, 0.2);
}

.dark {
  --elevation-1: 0 2px 4px rgba(0, 0, 0, 0.35);
  --elevation-2: 0 4px 8px rgba(0, 0, 0, 0.45);
  --elevation-3: 0 8px 16px rgba(0, 0, 0, 0.55);
  --elevation-4: 0 12px 24px rgba(0, 0, 0, 0.65);
}

/* Liquid Glass Utility Classes - Material You × iOS Glass */
.glass-card {
  background: rgba(255, 255, 255, 0.85);
  backdrop-filter: blur(24px) saturate(180%);
  -webkit-backdrop-filter: blur(24px) saturate(180%);
  border: 1px solid rgba(203, 213, 225, 0.5);
  border-radius: 1rem;
  box-shadow: var(--elevation-2), inset 0 1px 0 rgba(255, 255, 255, 0.5);
  transition: all 0.3s cubic-bezier(0.22, 1, 0.36, 1);
}

.dark .glass-card {
  background: rgba(18, 18, 21, 0.7);
  border: 1px solid rgba(255, 255, 255, 0.08);
  box-shadow: var(--elevation-2), inset 0 1px 0 rgba(255, 255, 255, 0.05);
}

.glass-card:hover {
  background: rgba(255, 255, 255, 0.95);
  box-shadow: var(--elevation-3), inset 0 1px 0 rgba(255, 255, 255, 0.8);
  transform: translateY(-3px) scale(1.005);
  border-color: var(--color-interactive-hover-border);
}

.dark .glass-card:hover {
  background: rgba(18, 18, 21, 0.8);
  box-shadow: var(--elevation-3), inset 0 1px 0 rgba(255, 255, 255, 0.08);
  border-color: var(--color-interactive-hover-border);
}

.glass-card:active {
  transform: translateY(0) scale(1);
  transition-duration: 100ms;
}

.dark .glass-card:active {
  transform: translateY(0) scale(1);
  transition-duration: 100ms;
}

@media (prefers-reduced-transparency: reduce) {
  .glass-card {
    background: var(--color-card-elevated);
    backdrop-filter: none;
    -webkit-backdrop-filter: none;
    border-color: color-mix(in srgb, var(--shell-card-border) 70%, transparent);
    box-shadow: var(--shadow-1);
  }
}

.surface-card {
  background: var(--color-card-elevated);
  border-radius: 1rem;
  border: 1px solid var(--shell-card-border);
  box-shadow: var(--shadow-1);
  transition: transform var(--transition-duration-short)
      var(--transition-ease-out),
    box-shadow var(--transition-duration-short) var(--transition-ease-out),
    border-color var(--transition-duration-short) var(--transition-ease-out);
}

.surface-card:hover {
  transform: translateY(-2px) scale(1.005);
  border-color: color-mix(in srgb, var(--shell-border) 60%, transparent);
  box-shadow: var(--shadow-2);
}

.surface-card:active {
  transform: translateY(0) scale(1);
  transition-duration: 100ms;
}

.dark .surface-card {
  background: rgba(12, 16, 32, 0.92);
  border-color: color-mix(in srgb, var(--shell-card-border) 60%, transparent);
  box-shadow: var(--shadow-1);
}

.shell-bg {
  position: absolute;
  inset: 0;
  pointer-events: none;
  z-index: 0;
  overflow: hidden;
}

.shell-bg__layer {
  position: absolute;
  inset: 0;
  border-radius: inherit;
}

.shell-bg__layer--gradient {
  background-image: var(--shell-gradient);
  opacity: 0.8;
  filter: saturate(110%);
}

.shell-bg__layer--grid {
  background-image:
    linear-gradient(
      90deg,
      transparent calc(var(--shell-grid-size) - 1px),
      var(--shell-grid-color)
    ),
    linear-gradient(
      0deg,
      transparent calc(var(--shell-grid-size) - 1px),
      var(--shell-grid-color)
    );
  background-size: var(--shell-grid-size) var(--shell-grid-size);
  mix-blend-mode: soft-light;
  opacity: 0.25;
}

.shell-bg__blob {
  position: absolute;
  width: clamp(220px, 28vw, 420px);
  aspect-ratio: 1 / 1;
  border-radius: 50%;
  filter: blur(60px);
  opacity: 0.6;
}

.shell-bg__blob--left {
  top: 5%;
  left: max(-10%, -120px);
  background: radial-gradient(circle, rgba(91, 94, 252, 0.55), transparent 60%);
}

.shell-bg__blob--right {
  bottom: -10%;
  right: max(-10%, -140px);
  background: radial-gradient(circle, rgba(14, 165, 233, 0.45), transparent 65%);
}

.dark .shell-bg__layer--gradient {
  opacity: 0.9;
}

.dark .shell-bg__layer--grid {
  opacity: 0.35;
}

.dark .shell-bg__blob--left {
  background: radial-gradient(circle, rgba(91, 94, 252, 0.4), transparent 65%);
}

.dark .shell-bg__blob--right {
  background: radial-gradient(circle, rgba(236, 72, 153, 0.35), transparent 70%);
}

/* ===== Interactive State Utilities ===== */
/* Hover state for cards */
.card-interactive {
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  border-color: var(--border-soft);
}

.card-interactive:hover {
  transform: translateY(-2px);
  box-shadow: var(--elevation-3);
  border-color: var(--color-interactive-hover-border);
  background: var(--color-card-hover);
}

.dark .card-interactive:hover {
  background: var(--color-card-hover);
  border-color: var(--color-interactive-hover-border);
}

/* Active/pressed state */
.card-interactive:active {
  transform: translateY(0);
  box-shadow: var(--elevation-1);
  background: var(--color-card-pressed);
}

/* Focus state */
.card-interactive:focus-within {
  outline: 2px solid var(--color-interactive-focus-ring);
  outline-offset: 2px;
}

.glass-nav {
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(20px) saturate(180%);
  -webkit-backdrop-filter: blur(20px) saturate(180%);
  border-bottom: 1px solid rgba(255, 255, 255, 0.2);
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
}

.dark .glass-nav {
  background: rgba(12, 12, 15, 0.8);
  border-bottom: 1px solid rgba(255, 255, 255, 0.08);
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.35);
}

.glass-modal {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(32px) saturate(180%);
  -webkit-backdrop-filter: blur(32px) saturate(180%);
  border: 1px solid rgba(255, 255, 255, 0.3);
  box-shadow: var(--elevation-4), inset 0 1px 0 rgba(255, 255, 255, 0.2);
}

.dark .glass-modal {
  background: rgba(18, 18, 21, 0.85);
  border: 1px solid rgba(255, 255, 255, 0.08);
  box-shadow: var(--elevation-4), inset 0 1px 0 rgba(255, 255, 255, 0.1);
}

/* Dashboard Redesign Styles */
.modern-background {
  background-color: rgb(var(--bg-secondary));
  background-image: radial-gradient(
    circle at 50% 50%,
    rgb(var(--bg-primary)) 0%,
    rgb(var(--bg-tertiary)) 100%
  );
}

.dark .modern-background {
  background-color: rgb(var(--bg-inverted));
  background-image: radial-gradient(
    circle at 50% 50%,
    rgb(var(--bg-secondary)) 0%,
    rgb(var(--bg-inverted)) 100%
  );
}

/* Solid Card (Fix for previewing) */
.solid-card {
  position: relative;
  z-index: 10;
  background-color: rgb(var(--color-card));
  border-radius: 16px;
  border: 1px solid rgb(var(--color-border));
  box-shadow: var(--shadow-md);
  transition: transform 250ms ease-out, box-shadow 250ms ease-out;
}

.dark .solid-card {
  background-color: rgb(var(--bg-secondary));
  border-color: rgb(var(--color-border));
}

.solid-card:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-lg);
}

/* Segmented Control Styles */
.segmented-control-container {
  position: relative;
  display: flex;
  padding: 4px;
  background-color: rgb(var(--bg-tertiary));
  border-radius: 9999px;
  width: 100%;
}

.dark .segmented-control-container {
  background-color: rgb(var(--bg-inverted));
}

.segmented-control-button {
  flex: 1;
  position: relative;
  z-index: 10;
  padding: 6px 12px;
  border: none;
  background: transparent;
  border-radius: 9999px;
  font-size: 0.875rem;
  font-weight: 500;
  color: rgb(var(--text-secondary));
  cursor: pointer;
  transition: color 0.3s ease;
}

.dark .segmented-control-button {
  color: rgb(var(--text-muted));
}

.segmented-control-button.active {
  color: rgb(var(--text-primary));
}

.dark .segmented-control-button.active {
  color: rgb(var(--text-inverted));
}

.segmented-control-glider {
  position: absolute;
  top: 4px;
  bottom: 4px;
  height: calc(100% - 8px);
  background-color: rgb(var(--bg-primary));
  border-radius: 9999px;
  box-shadow: var(--shadow-sm);
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.dark .segmented-control-glider {
  background-color: rgb(var(--bg-secondary));
}

@keyframes fade-in-up {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fade-in {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes shimmer {
  0% {
    background-position: -200% center;
  }
  100% {
    background-position: 200% center;
  }
}

@keyframes pulse-glow {
  0%, 100% {
    opacity: 1;
    filter: brightness(1);
  }
  50% {
    opacity: 0.9;
    filter: brightness(1.1);
  }
}

@keyframes smooth-bounce {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-4px);
  }
}

.animate-fade-in-up {
  animation: fade-in-up 0.5s ease-out forwards;
}

.animate-fade-in {
  animation: fade-in 0.5s ease-out forwards;
}

.animate-shimmer {
  animation: shimmer 2s infinite linear;
  background: linear-gradient(
    90deg,
    rgba(255, 255, 255, 0) 0%,
    rgba(255, 255, 255, 0.4) 50%,
    rgba(255, 255, 255, 0) 100%
  );
  background-size: 200% 100%;
}

.dark .animate-shimmer {
  background: linear-gradient(
    90deg,
    rgba(255, 255, 255, 0) 0%,
    rgba(255, 255, 255, 0.1) 50%,
    rgba(255, 255, 255, 0) 100%
  );
}

.animate-pulse-glow {
  animation: pulse-glow 2s ease-in-out infinite;
}

.animate-smooth-bounce {
  animation: smooth-bounce 1s ease-in-out infinite;
}

.animate-delay-100ms {
  animation-delay: 100ms;
}

.animate-delay-200ms {
  animation-delay: 200ms;
}

.animate-delay-300ms {
  animation-delay: 300ms;
}

.animate-delay-500ms {
  animation-delay: 500ms;
}

@custom-variant dark (&:is(.dark *));

@theme inline {
  --color-background: var(--background);
  --color-foreground: var(--foreground);
  --color-card: var(--card);
  --color-card-foreground: var(--card-foreground);
  --color-popover: var(--popover);
  --color-popover-foreground: var(--popover-foreground);
  --color-primary: var(--primary);
  --color-primary-foreground: var(--primary-foreground);
  --color-secondary: var(--secondary);
  --color-secondary-foreground: var(--secondary-foreground);
  --color-muted: var(--muted);
  --color-muted-foreground: var(--muted-foreground);
  --color-accent: var(--accent);
  --color-accent-foreground: var(--accent-foreground);
  --color-destructive: var(--destructive);
  --color-destructive-foreground: var(--destructive-foreground);
  --color-border: var(--border);
  --color-input: var(--input);
  --color-ring: var(--ring);
  --color-sidebar: var(--sidebar);
  --color-sidebar-foreground: var(--sidebar-foreground);
  --color-sidebar-primary: var(--sidebar-primary);
  --color-sidebar-primary-foreground: var(--sidebar-primary-foreground);
  --color-sidebar-accent: var(--sidebar-accent);
  --color-sidebar-accent-foreground: var(--sidebar-accent-foreground);
  --color-sidebar-border: var(--sidebar-border);
  --color-sidebar-ring: var(--sidebar-ring);

  /* Premium font stack with Inter */
  --font-geist-sans: "Inter", system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI",
    "Roboto", sans-serif;
  --font-geist-mono: ui-monospace, "SF Mono", "Monaco", "Menlo", "Consolas", monospace;
  --font-sans: var(--font-geist-sans);
  --font-mono: var(--font-geist-mono);

  --radius-sm: var(--radius-sm);
  --radius-md: var(--radius-md);
  --radius-lg: var(--radius-lg);
  --radius-xl: var(--radius-xl);
}

:root {
  color-scheme: light;

  /* Enhanced 8px-based Spacing System */
  --space-0: 0;
  --space-px: 1px;
  --space-0-5: 0.125rem; /* 2px */
  --space-1: 0.25rem; /* 4px */
  --space-1-5: 0.375rem; /* 6px */
  --space-2: 0.5rem; /* 8px - Base unit */
  --space-2-5: 0.625rem; /* 10px */
  --space-3: 0.75rem; /* 12px */
  --space-3-5: 0.875rem; /* 14px */
  --space-4: 1rem; /* 16px */
  --space-5: 1.25rem; /* 20px */
  --space-6: 1.5rem; /* 24px */
  --space-7: 1.75rem; /* 28px */
  --space-8: 2rem; /* 32px */
  --space-9: 2.25rem; /* 36px */
  --space-10: 2.5rem; /* 40px */
  --space-11: 2.75rem; /* 44px - Minimum touch target */
  --space-12: 3rem; /* 48px */
  --space-14: 3.5rem; /* 56px */
  --space-16: 4rem; /* 64px */
  --space-20: 5rem; /* 80px */
  --space-24: 6rem; /* 96px */
  --space-28: 7rem; /* 112px */
  --space-32: 8rem; /* 128px */
  --space-36: 9rem; /* 144px */
  --space-40: 10rem; /* 160px */
  --space-44: 11rem; /* 176px */
  --space-48: 12rem; /* 192px */
  --space-52: 13rem; /* 208px */
  --space-56: 14rem; /* 224px */
  --space-60: 15rem; /* 240px */
  --space-64: 16rem; /* 256px */
  --space-72: 18rem; /* 288px */
  --space-80: 20rem; /* 320px */
  --space-96: 24rem; /* 384px */

  /* Enhanced Typography Scale */
  --text-xs: 0.75rem; /* 12px */
  --text-sm: 0.875rem; /* 14px */
  --text-base: 1rem; /* 16px */
  --text-lg: 1.125rem; /* 18px */
  --text-xl: 1.25rem; /* 20px */
  --text-2xl: 1.5rem; /* 24px */
  --text-3xl: 1.875rem; /* 30px */
  --text-4xl: 2.25rem; /* 36px */
  --text-5xl: 3rem; /* 48px */
  --text-6xl: 3.75rem; /* 60px */
  --text-7xl: 4.5rem; /* 72px */
  --text-8xl: 6rem; /* 96px */
  --text-9xl: 8rem; /* 128px */

  /* Font Weight Scale */
  --font-thin: 100;
  --font-extralight: 200;
  --font-light: 300;
  --font-normal: 400;
  --font-medium: 500;
  --font-semibold: 600;
  --font-bold: 700;
  --font-extrabold: 800;
  --font-black: 900;

  /* Line Height Scale */
  --leading-none: 1;
  --leading-tight: 1.25;
  --leading-snug: 1.375;
  --leading-normal: 1.5;
  --leading-relaxed: 1.625;
  --leading-loose: 2;

  /* Letter Spacing Scale */
  --tracking-tighter: -0.05em;
  --tracking-tight: -0.025em;
  --tracking-normal: 0em;
  --tracking-wide: 0.025em;
  --tracking-wider: 0.05em;
  --tracking-widest: 0.1em;

  /* Enhanced Radius System */
  --radius-none: 0;
  --radius-xs: 0.125rem; /* 2px */
  --radius-sm: 0.25rem; /* 4px */
  --radius-md: 0.5rem; /* 8px */
  --radius-lg: 0.75rem; /* 12px */
  --radius-xl: 1.25rem; /* 20px */
  --radius-2xl: 1.75rem; /* 28px */
  --radius-3xl: 2.5rem; /* 40px */
  --radius-full: 9999px;
  --radius: var(--radius-lg);

  /* Enhanced Shadow System (light mode) */
  --shadow-xs: 0 1px 2px rgba(15, 23, 42, 0.05);
  --shadow-sm: 0 1px 3px rgba(15, 23, 42, 0.08),
    0 1px 2px rgba(15, 23, 42, 0.06);
  --shadow-md: 0 4px 6px rgba(15, 23, 42, 0.1), 0 2px 4px rgba(15, 23, 42, 0.06);
  --shadow-lg: 0 10px 15px rgba(15, 23, 42, 0.12),
    0 4px 6px rgba(15, 23, 42, 0.08);
  --shadow-xl: 0 20px 25px rgba(15, 23, 42, 0.16),
    0 10px 10px rgba(15, 23, 42, 0.08);
  --shadow-2xl: 0 25px 50px rgba(15, 23, 42, 0.25);
  --shadow-inner: inset 0 2px 4px rgba(15, 23, 42, 0.06);

  /* Enhanced Animation System */
  --duration-0: 0ms;
  --duration-75: 75ms;
  --duration-100: 100ms;
  --duration-150: 150ms;
  --duration-200: 200ms;
  --duration-300: 300ms;
  --duration-500: 500ms;
  --duration-700: 700ms;
  --duration-1000: 1000ms;

  /* Enhanced Easing Functions */
  --ease-linear: linear;
  --ease-in: cubic-bezier(0.4, 0, 1, 1);
  --ease-out: cubic-bezier(0, 0, 0.2, 1);
  --ease-in-out: cubic-bezier(0.4, 0, 0.2, 1);
  --ease-bounce: cubic-bezier(0.68, -0.55, 0.265, 1.55);
  --ease-spring: cubic-bezier(0.175, 0.885, 0.32, 1.275);
  --ease-elastic: cubic-bezier(0.68, -0.6, 0.32, 1.6);

  /* Legacy transition tokens for backward compatibility */
  --transition-duration-micro: var(--duration-150);
  --transition-duration-small: var(--duration-300);
  --transition-duration-medium: var(--duration-500);
  --transition-duration-large: var(--duration-700);
  --transition-ease-in: var(--ease-in);
  --transition-ease-out: var(--ease-out);
  --transition-ease-in-out: var(--ease-in-out);

  /* Core semantic color tokens - Light */
  --color-bg: #f6f8fc;
  --color-surface: rgba(255, 255, 255, 0.92);
  --color-surface-muted: #eef2ff;
  --color-popover: rgba(255, 255, 255, 0.98);
  --color-card: rgba(255, 255, 255, 0.95);
  --color-foreground: #050b18;
  --color-foreground-muted: #4b5674;
  --color-foreground-subtle: #6c7797; /* Slightly softer for tertiary copy */
  --color-border: rgba(15, 23, 42, 0.08);
  --color-border-strong: rgba(15, 23, 42, 0.18);
  --color-ring: #7c83ff;
  --color-primary: #5b5efc;
  --color-primary-foreground: #fdfbff;
  --color-accent: #8b5cf6;
  --color-accent-foreground: #ffffff;
  --color-success: #0fb881;
  --color-warning: #f7a600;
  --color-danger: #f04461;
  --color-info: #0ea5e9;
  --color-overlay: rgba(124, 131, 255, 0.12);

  /* Tailwind theme variables */
  --background: var(--color-bg);
  --foreground: var(--color-foreground);
  --card: var(--color-card);
  --card-foreground: var(--color-foreground);
  --popover: var(--color-popover);
  --popover-foreground: var(--color-foreground);
  --primary: var(--color-primary);
  --primary-foreground: var(--color-primary-foreground);
  --secondary: rgba(91, 94, 252, 0.08);
  --secondary-foreground: var(--color-foreground);
  --muted: #eff2ff;
  --muted-foreground: #5c6686; /* Maintains AA contrast on muted surfaces */
  --accent: var(--color-accent);
  --accent-foreground: var(--color-accent-foreground);
  --destructive: var(--color-danger);
  --destructive-foreground: #fff4f7;
  --border: var(--color-border);
  --input: var(--color-border);
  --ring: var(--color-ring);
  --chart-1: 239 95% 66%;  /* Brand Indigo #5b5efc */
  --chart-2: 162 72% 45%;  /* Teal #14b885 */
  --chart-3: 28 96% 55%;   /* Soft Orange #f97316 */
  --chart-4: 199 90% 52%;  /* Sky #0ea5e9 */
  --chart-5: 291 84% 66%;  /* Violet #a855f7 */
  --sidebar: var(--shell-sidebar-bg);
  --sidebar-foreground: var(--color-foreground);
  --sidebar-primary: var(--color-primary);
  --sidebar-primary-foreground: #fdfbff;
  --sidebar-accent: rgba(91, 94, 252, 0.12);
  --sidebar-accent-foreground: var(--color-foreground);
  --sidebar-border: var(--shell-card-border);
  --sidebar-ring: var(--shell-border);

  /* Role accent variables - Light */
  --role-employee-accent: #0ea5e9;
  --role-employee-accent-soft: rgba(14, 165, 233, 0.18);
  --role-dept-head-accent: #5b5efc;
  --role-dept-head-accent-soft: rgba(91, 94, 252, 0.2);
  --role-hr-admin-accent: #22c55e;
  --role-hr-admin-accent-soft: rgba(34, 197, 94, 0.18);
  --role-hr-head-accent: #9333ea;
  --role-hr-head-accent-soft: rgba(147, 51, 234, 0.22);
  --role-ceo-accent: #f97316;
  --role-ceo-accent-soft: rgba(249, 115, 22, 0.18);
}

.dark {
  color-scheme: dark;

  /* Enhanced Shadow System (dark mode) */
  --shadow-xs: 0 1px 2px rgba(0, 0, 0, 0.35);
  --shadow-sm: 0 1px 3px rgba(0, 0, 0, 0.45), 0 1px 2px rgba(0, 0, 0, 0.35);
  --shadow-md: 0 4px 6px rgba(0, 0, 0, 0.5), 0 2px 4px rgba(0, 0, 0, 0.4);
  --shadow-lg: 0 10px 15px rgba(0, 0, 0, 0.55), 0 4px 6px rgba(0, 0, 0, 0.45);
  --shadow-xl: 0 20px 25px rgba(0, 0, 0, 0.6), 0 10px 10px rgba(0, 0, 0, 0.5);
  --shadow-2xl: 0 25px 50px rgba(0, 0, 0, 0.75);
  --shadow-inner: inset 0 2px 4px rgba(0, 0, 0, 0.4);

  /* Core semantic color tokens - Dark (Black/Dark Gray theme) */
  --color-bg: #01030d;
  --color-surface: rgba(6, 10, 30, 0.9);
  --color-surface-muted: rgba(13, 17, 42, 0.85);
  --color-popover: rgba(12, 17, 42, 0.95);
  --color-card: rgba(8, 12, 28, 0.9);
  --color-foreground: #f5f7ff;
  --color-foreground-muted: #c3c8ec;
  --color-foreground-subtle: #9aa3d8; /* Maintains contrast while softening copy */
  --color-border: rgba(129, 140, 248, 0.2);
  --color-border-strong: rgba(129, 140, 248, 0.35);
  --color-ring: #aabeff;
  --color-primary: #aab7ff;
  --color-primary-foreground: #05070e;
  --color-accent: #8ab8ff;
  --color-accent-foreground: #05070e;
  --color-success: #4ad7b1;
  --color-warning: #fdbb4d;
  --color-danger: #ff6b7c;
  --color-info: #5ad5ff;
  --color-overlay: rgba(1, 3, 13, 0.85);

  /* Tailwind theme variables */
  --background: var(--color-bg);
  --foreground: var(--color-foreground);
  --card: var(--color-card);
  --card-foreground: var(--color-foreground);
  --popover: var(--color-popover);
  --popover-foreground: var(--color-foreground);
  --primary: var(--color-primary);
  --primary-foreground: var(--color-primary-foreground);
  --secondary: rgba(134, 143, 255, 0.18);
  --secondary-foreground: var(--color-foreground);
  --muted: rgba(10, 14, 34, 0.92);
  --muted-foreground: #aab3e4;
  --accent: var(--color-accent);
  --accent-foreground: var(--color-accent-foreground);
  --destructive: var(--color-danger);
  --destructive-foreground: #2a0d18;
  --border: var(--color-border);
  --input: var(--color-border);
  --ring: var(--color-ring);
  --chart-1: 235 84% 80%;  /* Pale brand indigo */
  --chart-2: 160 68% 52%;  /* Aqua green */
  --chart-3: 30 95% 62%;   /* Vivid orange */
  --chart-4: 199 89% 65%;  /* Bright sky */
  --chart-5: 281 83% 74%;  /* Neon violet */
  --sidebar: var(--shell-sidebar-bg);
  --sidebar-foreground: var(--color-foreground);
  --sidebar-primary: var(--color-primary);
  --sidebar-primary-foreground: var(--color-primary-foreground);
  --sidebar-accent: rgba(255, 255, 255, 0.04);
  --sidebar-accent-foreground: var(--color-foreground);
  --sidebar-border: var(--shell-card-border);
  --sidebar-ring: var(--shell-border);

  /* Role accent variables - Dark */
  --role-employee-accent: #5ad5ff;
  --role-employee-accent-soft: rgba(22, 78, 99, 0.55);
  --role-dept-head-accent: #aab7ff;
  --role-dept-head-accent-soft: rgba(48, 53, 110, 0.6);
  --role-hr-admin-accent: #4ad7b1;
  --role-hr-admin-accent-soft: rgba(27, 63, 55, 0.65);
  --role-hr-head-accent: #caa7ff;
  --role-hr-head-accent-soft: rgba(60, 31, 95, 0.6);
  --role-ceo-accent: #fdbb4d;
  --role-ceo-accent-soft: rgba(86, 42, 3, 0.65);
}

@layer base {
  * {
    border-color: var(--border);
    outline: none;
  }

  *::selection {
    background-color: rgba(99, 102, 241, 0.18);
    color: var(--color-foreground);
  }

  .dark *::selection {
    background-color: rgba(129, 140, 248, 0.28);
    color: var(--color-foreground);
  }

  html {
    font-family: "Inter", system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI",
      "Roboto", sans-serif;
    scroll-behavior: smooth;
    font-feature-settings: "cv02", "cv03", "cv04", "cv11"; /* Inter stylistic sets */
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  body {
    @apply text-foreground antialiased;
    background-color: var(--color-bg);
    color: var(--foreground);
    min-height: 100vh;
    text-rendering: optimizeLegibility;
    position: relative;
    isolation: isolate;
    overflow-x: hidden;
    transition: background-color var(--transition-duration-medium)
        var(--transition-ease-out),
      color var(--transition-duration-medium) var(--transition-ease-out),
      border-color var(--transition-duration-medium) var(--transition-ease-out),
      opacity var(--transition-duration-small) var(--transition-ease-in-out);
  }
